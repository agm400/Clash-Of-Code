import java.util.*;
class Solution {

    public static void main(String args[]) {
        Scanner in = new Scanner(System.in);
        int M = in.nextInt();
        int D = in.nextInt();
        int N = in.nextInt();
        int x=M;
        int sum=0;

        for(int i=0;i<N;i++){
            sum+=x;
            x+=D;
        }
        
        System.out.println(sum);
    }
}
